# ==========================================
# MuMuAINovel Docker 配置文件
# ==========================================
# 复制此文件为 .env 并修改配置值
# cp .env.example .env

# ==========================================
# 服务端口配置
# ==========================================
APP_PORT=8000
POSTGRES_PORT=5433

# ==========================================
# 应用配置
# ==========================================
APP_NAME=MuMuAINovel
APP_VERSION=1.2.4
APP_HOST=0.0.0.0
DEBUG=false
TZ=Asia/Shanghai

# ==========================================
# PostgreSQL 数据库配置
# ==========================================
POSTGRES_DB=mumuai_novel
POSTGRES_USER=mumuai
POSTGRES_PASSWORD=your_secure_password_here
# 连接池配置
DATABASE_POOL_SIZE=30
DATABASE_MAX_OVERFLOW=20

# ==========================================
# AI 服务配置（至少配置一个）
# ==========================================
# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# 默认 AI 配置
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=32000

# ==========================================
# 本地账户登录配置
# ==========================================
LOCAL_AUTH_ENABLED=true
LOCAL_AUTH_USERNAME=admin
LOCAL_AUTH_PASSWORD=admin123
LOCAL_AUTH_DISPLAY_NAME=本地管理员

# ==========================================
# LinuxDO OAuth 配置（可选）
# ==========================================
LINUXDO_CLIENT_ID=
LINUXDO_CLIENT_SECRET=
LINUXDO_REDIRECT_URI=http://localhost:8000/api/auth/callback
FRONTEND_URL=http://localhost:8000

# ==========================================
# 会话配置
# ==========================================
SESSION_EXPIRE_MINUTES=120
SESSION_REFRESH_THRESHOLD_MINUTES=30

# ==========================================
# 日志配置
# ==========================================
LOG_LEVEL=INFO
LOG_TO_FILE=true

# ==========================================
# 自动化脚本配置 (auto_resume.py, novel_pipeline.py)
# ==========================================
MUMUAI_BASE_URL=http://localhost:8000
MUMUAI_USERNAME=admin
MUMUAI_PASSWORD=admin123
MUMUAI_CHECK_INTERVAL=120
